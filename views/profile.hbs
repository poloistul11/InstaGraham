<div class="wrapper">

    {{> header }}

    <body background="/img/background.jpg">
        <div class="row marketing">
            <div class="col-lg-4">
                <div class="container">
                    <h1 class="titleR">{{title}}</h1>
                </div>
            </div>
        </div>

        {{#each photos}}

        <div class="photoSpacer">

            <div class="row marketing">
                <div class="col-lg-6">
                    <div class="imgR">
                        <img class="imgR" src={{link}}>
                    </div>
                </div>


                <div class="col-lg-6">
                    <div class="col-lg-2">
                        <button onClick="deletePhoto({{this.id}})" type="button" class="btnR1">Delete</button>
                    </div>

                    <div class="row marketing">
                        <div class="col-lg-3">
                            <div class="titleR1">Likes: {{likes}}</div>
                        </div>
                    </div>
                    <div class="titleR1">Description:</div>
                    <div class="titleR2">{{description}} </div>

                    <div class="titleR1">Comments:</div>
                    {{#each comments}}
                    <div class="marginL">
                        <div class="row marketing">
                            <div class="col-lg-2.1">
                                <div class="titleR3">{{this.name}}:</div>
                            </div>
                            <div class="col-lg-7">
                                <div class="titleR2">{{this.text}}</div>
                            </div>
                        </div>
                    </div>
                    {{/each}}


                </div>
            </div>

            {{/each}}

            <script>
                function deletePhoto(photoId) {
                    location.href = "/photo_delete/" + photoId;
                }
            </script>

    </body>

    <div class="space">
        {{> footer}}
    </div>

</div>