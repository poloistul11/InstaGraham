<div class="wrapper">

{{> header }}


<body background="/img/background.jpg">
    <div class="container">
        <h1 class="titleR">{{team.name}}</h1>
    
    <form method="POST" action="/edit_team/:id">
            <div class="subtitleR">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" value={{{team.name}}}>
            </div>
            <div class="subtitleR">
                <label for="country">Team Chief</label>
                <input type="text" name="teamChief" class="form-control" value={{team.teamChief}}>
            </div>
            <div class="subtitleR">
                <label for="podiums">Technical Chief</label>
                <input type="text" name="technicalChief" class="form-control" value={{team.technicalChief}}>
            </div>
            <div class="subtitleR">
                <label for="points">Chasis</label>
                <input type="text" name="chassis" class="form-control" value={{team.chassis}}>
            </div>
            <div class="subtitleR">
                <label for="gpEntered">Power Unit</label>
                <input type="text" name="powerUnit" class="form-control" value={{team.powerUnit}}>
            </div>
            <div class="subtitleR">
                <label for="wChampionships">First Participation</label>
                <input type="text" name="firstTeamEntry" class="form-control" value={{team.firstTeamEntry}}>
            </div>
            <div class="subtitleR" >
                <label for="highestFinish">World Championships Won</label>
                <input type="text" name="worldChampionships" class="form-control" value={{team.worldChampionships}}>
            </div>
            <div class="subtitleR" style="visibility: hidden">
                <input type="text" name="id" class="form-control" value={{team.team_ID}}>
            </div>
           
           
            <button type="submit" class="btn">Save</button>
        </form>

    </div>
</body>

<div class="space">
    {{> footer}}
</div>

</div>
